<!-- ?xml version="1.0" encoding="utf-8"? -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/stop_button_green" />
            <corners android:radius="800dp"/>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
        </shape>
    </item>

    <!-- 默認時的背景圖片 -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color = "@color/start_button_green"/>
            <corners android:radius="800dp"/>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
        </shape>
    </item>

</selector>